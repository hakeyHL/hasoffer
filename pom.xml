    <!--
    dependencyManagement：子module不会直接继承依赖关系，但是如果子module依赖其中的包，则不需要指定版本号，会默认使用此处配置的版本，使每个module的版本一致。
    -->
    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>hasoffer</groupId>
                <artifactId>hasoffer.base.web</artifactId>
                <version>${hasoffer.common.version}</version>
            </dependency>

            <dependency>
                <groupId>org.apache.commons</groupId>
                <artifactId>commons-lang3</artifactId>
                <version>${commons-lang3.version}</version>
            </dependency>
            <dependency>

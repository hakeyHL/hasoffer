<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
        http://code.alibabatech.com/schema/dubbo
        http://code.alibabatech.com/schema/dubbo/dubbo.xsd"
       default-lazy-init="false">
    <dubbo:application name="third-provider"/>
    <!-- 使用zookeeper注册中心暴露服务地址 -->
    <dubbo:registry address="zookeeper://60.205.57.57:2181" check="false" subscribe="false" register=""/>
    <dubbo:protocol name="dubbo" port="20880" />
    <dubbo:provider weight="50"/>
    <!-- 要暴露的服务接口 -->
    <dubbo:service group="flipkart" interface="hasoffer.dubbo.api.fetch.service.IFetchService"  ref="flipkartFetchService"/>
    <bean id="flipkartFetchService" class="hasoffer.dubbo.api.fetch.service.impl.FlipkartFetchServiceImpl" />
</beans>